---
import type { MarkdownHeading } from 'astro';
import NavList from './NavList.astro';
import type { NavLink } from './NavList.astro';

export interface Props {
    headings: MarkdownHeading[]
    current?: string
}

const { headings, current } = Astro.props as Props

const links = [
    {
        text: 'Overview',
        link: '#Overview',
        current: false,
    },
    ...headings.map((heading) => ({
        text: heading.text,
        link: `#${heading.slug}`,
        current: false
    }))
];
---

<NavList title="On this page" links={links} />