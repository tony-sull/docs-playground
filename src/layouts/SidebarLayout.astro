---
import Layout from "./Base.astro";
import type { Props as LayoutProps } from "./Base.astro";
import LeftSidebar from "../components/LeftSidebar.astro";

export interface Props extends LayoutProps { }

const { ...layout } = Astro.props as Props
---

<Layout {...layout}>
    <div>
        <aside><LeftSidebar /></aside>

        <article>
            <slot />
        </article>

        <aside></aside>
    </div>
</Layout>

<style>
    aside:first-of-type {
        position: relative;
        padding-inline-end: var(--gap-xl);
    }

    aside:first-of-type::before {
        content: '';
        position: absolute;
        top: -100%;
        left: -100%;
        right: 0;
        bottom: -100%;
        background-color: var(--color-neutral-100);
    }

    div {
        display: grid;
        grid-template-columns: auto 1fr auto;
        column-gap: var(--gap-xl);
    }
</style>